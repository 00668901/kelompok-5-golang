{
    "version": 2,
    "builds": [{
            "src": "frontend/**",
            "use": "@vercel/static-build",
            "config": {
                "installCommand": "npm install --prefix frontend",
                "buildCommand": "npm run build --prefix frontend"
            }
        },
        {
            "src": "api/**/*.go",
            "use": "@vercel/go"
        }
    ],
    "rewrites": [{
            "source": "/api/(.*)",
            "destination": "/api/index.go"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "headers": [{
        "source": "/(.*)",
        "headers": [{
            "key": "Access-Control-Allow-Origin",
            "value": "*"
        }]
    }]
}